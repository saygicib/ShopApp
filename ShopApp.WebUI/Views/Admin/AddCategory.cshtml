@model AddCategory
@{
    ViewData["Title"] = "AddCategory";
}

<h1>AddCategory</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="AddCategory" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">CategoryName</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </div>
        </form>
    </div>
</div>
