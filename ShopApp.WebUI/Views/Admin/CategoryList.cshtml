@model CategoryList;
@{
    ViewData["Title"] = "CategoryList";
}

<h1>CategoryList</h1>
<hr />
@if (Model.Categories is not null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td width:"100px;">Id</td>
                <td>Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" asp-controller="Admin" asp-action="UpdateCategory" asp-route-categoryId="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm mr-2" asp-controller="Admin" asp-action="DeleteCategory" asp-route-categoryId="@item.Id">Delete</a>                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}

