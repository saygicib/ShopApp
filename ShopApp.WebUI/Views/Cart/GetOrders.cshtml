@model List<OrderListDto> 
@{
    ViewData["Title"] = "GetOrders";
}

<h1>Orders</h1>
<hr />

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mt-7">
        <thead class="bg-primary text-white">
            <tr>
                <td colspan="2">Order Id: #@order.OrderId</td>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td>
                    <img src="~/img/@orderItem.ImageUrl" width="70">
                </td>
                <td>
                    @orderItem.Name
                </td>
                <td>
                    @orderItem.Price
                </td>
                <td>
                    @orderItem.Quantity
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>Customer Name:</td>
                <td>@order.FirstName @order.LastName</td>
                <td style="text-align:center" colspan="2" >Total : @order.TotalPrice()</td>
            </tr>
            <tr>
                <td colspan="2">Address :</td>
                <td colspan="2">@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Phone :</td>
                <td colspan="2">@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Email :</td>
                <td colspan="2">@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Payment Status :</td>
                <td colspan="2">@order.PaymentTypes</td>
            </tr>
            <tr>
                <td colspan="2">Order Status :</td>
                <td colspan="2">@order.Status</td>
            </tr>
        </tfoot>
    </table>
}