
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>First Name</label>
                    <input class="form-control" type="text" name="firstName" value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Last Name</label>
                    <input class="form-control" type="text" name="lastName" value="" />
                </div>
            </div>
            <div class="mb-3">
                <label>Address</label>
                <textarea class="form-control" name="address"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>City</label>
                    <input class="form-control" type="text" name="city" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Phone</label>
                    <input class="form-control" type="text" name="phone" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Email</label>
                    <input class="form-control" type="text" name="email" value="" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input class="custom-control-input" id="save-info" type="checkbox" value="" />
                <label class="custom-control-label" for="save-info">Save this information for next time</label>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-radio">
                <input class="custom-control-input" id="credit" name="paymentMethod" type="radio" checked />
                <label class="custom-control-label" for="credit">Credit Card</label>
            </div>
            <div class="custom-control custom-radio">
                <input class="custom-control-input" id="paypal" name="paymentMethod" type="radio" required />
                <label class="custom-control-label" for="eft">EFT</label>
            </div>

            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Name on Credit Card</label>
                    <input class="form-control" type="text" name="cardName" value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>Credit Card Number</label>
                    <input class="form-control" type="text" name="cardNumber" value="" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Month</label>
                    <input class="form-control" type="text" name="month" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Year</label>
                    <input class="form-control" type="text" name="year" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>CVV Number</label>
                    <input class="form-control" type="text" name="cvvNumber" value="" />
                </div>
            </div>
            <h4 class="mb-4"></h4>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Complete Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h6 class="my-0">Product Name</h6>
                    <small class="text-muted">Description</small>
                </div>
                <span class="text-muted">1000 TL</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
                <span class="text-muted">Total (TL)</span>
                <strong>2000 TL</strong>
            </li>
        </ul>
    </div>
</div>
