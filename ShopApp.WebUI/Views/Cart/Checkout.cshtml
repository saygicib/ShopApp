@model OrderDto
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" type="text" name="firstName" value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" type="text" name="lastName" value="" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" class="form-control" name="address"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" type="text" name="city" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" type="text" name="phone" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" type="text" name="email" value="" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input class="custom-control-input" id="save-info" type="checkbox" value="" />
                <label class="custom-control-label" for="save-info">Save this information for next time</label>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-radio">
                <input class="custom-control-input" id="credit" name="paymentMethod" type="radio" checked />
                <label class="custom-control-label" for="credit">Credit Card</label>
            </div>
            <div class="custom-control custom-radio">
                <input class="custom-control-input" id="paypal" name="paymentMethod" type="radio" required />
                <label class="custom-control-label" for="eft">EFT</label>
            </div>

            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardName"></label>
                    <input asp-for="@Model.CardName" class="form-control" type="text" name="cardName" value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardNumber"></label>
                    <input asp-for="@Model.CardNumber" class="form-control" type="text" name="cardNumber" value="" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" type="text" name="month" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" type="text" name="year" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.CVV"></label>
                    <input asp-for="@Model.CVV" class="form-control" type="text" name="cvvNumber" value="" />
                </div>
            </div>
            <h4 class="mb-4"></h4>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Complete Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartDto.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@item.Name
                            <small>x @item.Quantity</small>
                        </h6>
                    </div>
                    <span class="text-muted">@item.Price TL</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span class="text-muted">Total (TL)</span>
                <strong>@Model.CartDto.TotalPrice() TL</strong>
            </li>
        </ul>
    </div>
</div>
